<h1>Pirate</h1>

    <div class="pirate">
        <h3>Name: <%= @pirate.name %></h3>
        <h3>Height: <%= @pirate.height %></h3>
        <h3>Weight: <%= @pirate.weight %></h3>
    </div>


<h2>First Ship</h2>

    <div class="ship">
        <h4>Name: <%= @ships.first.name %></h4>
        <h4>Type: <%= @ships.first.type %></h4>
        <h4>Booty: <%= @ships.first.booty %></h4>
    </div>

<h2>Second Ship</h2>

    <div class="ship">
        <h4>Name: <%= @ships.last.name %></h4>
